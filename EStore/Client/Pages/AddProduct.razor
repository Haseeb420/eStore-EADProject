@page "/addProduct"


<div class="container my-3 bg-white py-3">
    <h3 class="text-center">Add Product</h3>
    <div class="row">
        <div class="col-10 mx-auto my-3">

            <EditForm Model="@product" OnSubmit="AddNewProduct">
                <div class="row my-3">
                    <div class="col">
                        <label class="form-label" for="@product.Name">Name: </label>
                        <InputText class="form-control" @bind-Value="product.Name" id="brand_name"></InputText>
                    </div>
                    <div class="col">
                        <label class="form-label" for="@product.Image">Image: </label>
                        <InputFile class="form-control" @bind-Value="product.Image" id="Image"></InputFile>
                    </div>
                </div>
                <div class="row my-3">
                    <div class="col">
                        <label class="form-label" for="@product.MainCategory">Main Category: </label>
                        <InputText class="form-control" @bind-Value="product.MainCategory" id="brand_name"></InputText>
                    </div>
                    <div class="col">
                        <label class="form-label" for="@product.subCategory">subCategory: </label>
                        <InputText class="form-control" @bind-Value="product.subCategory" id="Image"></InputText>
                    </div>
                </div>
                <div class="row my-3">
                    <input type="Submit" value="Submit" class="btn btn-success" />
                </div>
            </EditForm>
        </div>
    </div>
</div>

